#buildVersionsList()
                            </dl>
                        </div>
                        <div class="col-md-0 col-sm-4 col-xs-0"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container copyright">
            <ul class="list-copyright list-unstyled">
                <li>#copyright()</li>
                <li>#license()</li>
            </ul>
            <ul class="list-unstyled">
