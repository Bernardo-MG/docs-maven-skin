#parse( "site-macros.vm" )
#*--------------------------------------------------*#
#**
 * Body content is modified and edited by the various utilities.
 *#
#*--------------------------------------------------*#
#set( $shine = "" )
#set( $bgshine = "" )
#set( $figshine = "" )
#loadShineConfig( $shine $bgshine $figshine )
#setUp( $figshine )
<!DOCTYPE html>
<!--
 Generated by Apache Maven Doxia#if( $doxiaVersion ) $doxiaVersion#end the $dateFormat.format( $currentDate )
 Rendered using @project.name@ @project.version@ (@project.url@)
-->
<html xmlns="http://www.w3.org/1999/xhtml"#if( $locale ) lang="$locale.language"#end>
<head>
    <meta charset="${outputEncoding}">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- IE Compatibility tag -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>$title</title>
    <link href="./favicon.ico" rel="shortcut icon" type="image/x-icon">

    <!-- Metadata -->
#if($config.descriptionUrl)
    <meta name="description" content="$config.descriptionUrl.getValue()">
#end
#if($config.keywords)
    <meta name="keywords" content="$config.keywords.getValue()">
#end
#foreach( $author in $project.developers )
    <meta name="author" content="$author.name">
#end

    <!-- Facebook Open Graph -->
    <meta property="og:type" content="website">
#if($config.canonicalLink)
    <meta property="og:url" content="$config.canonicalLink.getValue()">
#end
    <meta property="og:site_name" content="$title">
    <meta property="og:title" content="$title">
#if($config.descriptionUrl)
    <meta property="og:description" content="$config.descriptionUrl.getValue()">
#end

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary">
#if($config.twitterSite)
    <meta name="twitter:creator" content="$config.twitterSite.getValue()">
#end
    <meta name="twitter:title" content="$title">
#if($config.descriptionUrl)
    <meta name="twitter:description" content="$config.descriptionUrl.getValue()">
#end

    <!-- CSS -->
#if ( $config.bootswatchStyle )
  #set( $bootswatchStyle = $config.bootswatchStyle.getValue() )
#else
  #set( $bootswatchStyle = "litera" )
#end
    <link rel="stylesheet" href="./lib/bootswatch/dist/${bootswatchStyle}/bootstrap.min.css">
    <link rel="stylesheet" href="./lib/font-awesome/css/all.min.css">
#if ( $config.customHighlightStyle )
  #set( $customHighlightStyle = $config.customHighlightStyle.getValue() )
#else
  #set( $customHighlightStyle = "default" )
#end
    <link rel="stylesheet" href="./lib/highlight/styles/${customHighlightStyle}.css">
    <!-- Docs Template style -->
    <link rel="stylesheet" href="./css/style.min.css">
    
#if( $config.customStyle )
    <!-- Custom style -->
    <link rel="stylesheet" href="$config.customStyle.getValue()">
#end

#**##if( $decoration.body.head )
#*  *#$render.eval( $decoration.body.head )
#**##end

</head>
<body class="d-flex flex-column">
<header>
    <nav id="navbar-main" class="navbar navbar-expand-md navbar-$shine bg-$bgshine">
        <div class="container-fluid">
            <a class="navbar-brand" href="./index.html">$project.name</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-main-menu" aria-controls="navbar-main" aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
            </button>
        
#**##if( $decoration.publishDate.position != "none" )
            <small class="navbar-text d-none d-md-block"><span id="navbar-version">${project.version}</span> (<time id="navbar-date">#publishDate()</time>)</small>
#**##else
            <small class="navbar-text d-none d-md-block"><span id="navbar-version">${project.version}</span></small>
#**##end
#**##if( $decoration.edit && $docRenderingContext.editable )
#**##* Doxia edition button. *#
            <div class="navbar-text"><a href="$docRenderingContext.getDoxiaSourcePath( $decoration.edit )"><span class="fas fa-edit" aria-hidden="true"></span></a></div>
#**##end
#set( $iconMenuElements = [] )
#loadIconNavMenuList( $iconMenuElements )
#set( $dropDownMenuElements = [] )
#loadTopNavMenuList( $dropDownMenuElements )
#if( $decoration.body.links )
#**##set( $linkMenuElements = $decoration.body.links )
#else
#**##set( $linkMenuElements = [] )
#end
#if( $iconMenuElements.size() > 0 )
            <div class="col-sm d-none d-md-block">
#**##iconsMenu( $iconMenuElements )
            </div>
#end
#if( $dropDownMenuElements.size() > 0 || $linkMenuElements.size() > 0 )
            <div class="collapse navbar-collapse" id="navbar-main-menu">
                <ul class="nav navbar-nav ms-auto">
#**##linksMenu( $linkMenuElements )
#**##dropdownMenu( $dropDownMenuElements )
                </ul>
            </div>
#end
        </div>
    </nav>
</header>
<section id="main-section" class="container flex-grow-1">
$bodyContent
</section>
<footer class="footer w-100 pt-2 border-top bg-$bgshine">
    <div id="footer-nav" class="bg-$bgshine container">
#set( $menuElements = [] )
#loadBottomNavMenuList( $menuElements )
#if($menuElements.size() > 0)
        <div id="navbar-footer" class="row">
#**##bottomNav( $menuElements )
        </div>
#end
    </div>
    <div id="footer-info" class="bg-$bgshine ps-2 pb-1 w-100">
#if( $decoration.body.footer )
        <div id="footer-custom-content">$render.eval( $decoration.body.footer )</div>
#end
        <div>#copyright()</div>
        <div>Rendered using <a href="@project.url@">@project.name@</a> @project.version@</div>
    </div>
</footer>
<script src="./lib/popperjs/core/dist/umd/popper.min.js"></script>
<script src="./lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="./lib/highlight/highlight.pack.js"></script>
<script src="./js/initializeHighlight.js"></script>
#if( $config.customScript )
<script src="$config.customScript.getValue()"></script>
#end
#if( $decoration.googleAnalyticsAccountId )
<script async src="https://www.googletagmanager.com/gtag/js?id=$decoration.googleAnalyticsAccountId"></script>
#googleAnalytics( $decoration.googleAnalyticsAccountId )
#end
</body>
</html>
