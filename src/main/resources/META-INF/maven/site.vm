#parse( "site-macros.vm" )##
#*--------------------------------------------------*###
#**
 * Body content is modified and edited by the various utilities.
 *###
#*--------------------------------------------------*###
#set( $shine = "" )##
#set( $bgshine = "" )##
#set( $figshine = "" )##
#loadShineConfig( $shine $bgshine $figshine )##
<!DOCTYPE html>
<!--
 Generated by Apache Maven Doxia#if( $doxiaVersion ) $doxiaVersion#end the $dateFormat.format( $date )
 Rendered using @project.name@ @project.version@ (@project.url@)
-->
<html xmlns="http://www.w3.org/1999/xhtml"#if( $locale ) lang="$locale.language"#end>
<head>
    <meta charset="${outputEncoding}">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>$title</title>
    <link href="./favicon.ico" rel="shortcut icon" type="image/x-icon">

    <!-- Metadata -->
#if( $site.getCustomValue( 'skinConfig.descriptionUrl' ) )##
    <meta name="description" content="$site.getCustomValue( 'skinConfig.descriptionUrl' )">
#end##
#if( $site.getCustomValue( 'skinConfig.keywords' ) )##
    <meta name="keywords" content="$site.getCustomValue( 'skinConfig.keywords' )">
#end##
#foreach( $author in $project.developers )##
    <meta name="author" content="$author.name">
#end##

    <!-- Facebook Open Graph -->
    <meta property="og:type" content="website">
#if( $site.getCustomValue( 'skinConfig.canonicalLink' ) )##
    <meta property="og:url" content="$site.getCustomValue( 'skinConfig.canonicalLink' )">
#end##
    <meta property="og:site_name" content="$title">
    <meta property="og:title" content="$title">
#if( $site.getCustomValue( 'skinConfig.descriptionUrl' ) )##
    <meta property="og:description" content="$site.getCustomValue( 'skinConfig.descriptionUrl' )">
#end##

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary">
#if( $site.getCustomValue( 'skinConfig.twitterSite' ) )##
    <meta name="twitter:creator" content="$site.getCustomValue( 'skinConfig.twitterSite' )">
#end##
    <meta name="twitter:title" content="$title">
#if( $site.getCustomValue( 'skinConfig.descriptionUrl' ) )##
    <meta name="twitter:description" content="$site.getCustomValue( 'skinConfig.descriptionUrl' )">
#end##

    <!-- CSS -->
#set( $bootswatchStyle = $site.getCustomValue( 'skinConfig.bootswatchStyle', 'litera' ) )##
    <link rel="stylesheet" href="./lib/bootswatch/dist/${bootswatchStyle}/bootstrap.min.css">
    <link rel="stylesheet" href="./lib/font-awesome/css/all.min.css">
#set( $customHighlightStyle = $site.getCustomValue( 'skinConfig.customHighlightStyle', "default" ) )##
    <link rel="stylesheet" href="./lib/highlight/styles/${customHighlightStyle}.css">
#if( $site.getCustomValue( 'skinConfig.customStyle' ) )##

    <!-- Custom style -->
    <link rel="stylesheet" href="$site.getCustomValue( 'skinConfig.customStyle' )">
#end##
#**##if( $site.body.head )##

#*  *#$render.eval( $site.body.head )##
#**##end##

</head>
<body class="d-flex flex-column">
<header>
    <nav id="navbar-main" class="navbar navbar-expand-md border-bottom bg-$bgshine" data-bs-theme="$bgshine" border-bottom>
        <div class="container-fluid">
            <a class="navbar-brand" href="./index.html">$project.name</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-main-menu" aria-controls="navbar-main" aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
            </button>
        
#**##if( $site.publishDate.position != "none" )##
            <small class="navbar-text d-none d-md-block"><span id="navbar-version">${project.version}</span> (<time id="navbar-date">$date.get('yyyy-MM-dd')</time>)</small>
#**##else##
            <small class="navbar-text d-none d-md-block"><span id="navbar-version">${project.version}</span></small>
#**##end##
#**##if( $site.edit && $docRenderingContext.editable )##
#**##* Doxia edition button. *###
            <div class="navbar-text"><a href="$docRenderingContext.getDoxiaSourcePath( $site.edit )"><span class="fa-solid fa-pen-to-square" aria-hidden="true"></span></a></div>
#**##end##
#set( $iconMenuElements = [] )##
#loadIconNavMenuList( $iconMenuElements )##
#set( $dropDownMenuElements = [] )##
#loadTopNavMenuList( $dropDownMenuElements )##
#if( $site.body.links )##
#**##set( $linkMenuElements = $site.body.links )##
#else##
#**##set( $linkMenuElements = [] )##
#end##
#if( $iconMenuElements.size() > 0 )##
#**##iconsMenu( $iconMenuElements )##
#end##
#if( $dropDownMenuElements.size() > 0 || $linkMenuElements.size() > 0 )##
            <div class="collapse navbar-collapse" id="navbar-main-menu">
                <ul class="nav navbar-nav ms-auto">
#**##linksMenu( $linkMenuElements )##
#**##dropdownMenu( $dropDownMenuElements )##
                </ul>
            </div>
#end##
        </div>
    </nav>
</header>
<main class="flex-grow-1">
    <section id="main-section" class="container">
#if ( $bodyContent )
#set( $parsedContent = $htmlTool.parse( $bodyContent ) )##
  #setUp( $figshine, $parsedContent )
#end
    </section>
</main>
<footer class="footer pt-2 border-top bg-$bgshine" data-bs-theme="$bgshine">
    <div id="footer-nav" class="container">
#set( $menuElements = [] )##
#loadBottomNavMenuList( $menuElements )##
#if($menuElements.size() > 0)##
        <div id="navbar-footer" class="row">
#**##bottomNav( $menuElements )##
        </div>
#end##
    </div>
    <div id="footer-info" class="bg-$bgshine ps-2 pb-1 w-100">
#if( $site.body.footer )##
        <div id="footer-custom-content">$render.eval( $site.body.footer )</div>
#end##
        <div>#copyright()</div>
        <div>Rendered using <a href="@project.url@">@project.name@</a> @project.version@</div>
    </div>
</footer>
<script src="./lib/popperjs/core/dist/umd/popper.min.js"></script>
<script src="./lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="./lib/highlight/highlight.min.js"></script>
<script src="./js/initializeHighlight.js"></script>
#if( $site.getCustomValue( 'skinConfig.customScript' ) )##
<script src="$site.getCustomValue( 'skinConfig.customScript' )"></script>
#end##
</body>
</html>